<h1>Edit a Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="figure_name">Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <label for="titles">Titles</label>
  <% @titles.each do |title| %>
    <input 
      type="checkbox" 
      id="title_<%= title.id %>" 
      name="figure[title_ids][]" 
      value="<%= title.id %>"
      <%= @figure.titles.include?(title) ? "checked" : "" %>
    >
      <%= title.name %>
  <% end %>

  <label for="new_title">New Title: </label>
  <input type="text" id="new_title" name="title[name]">

  <label for="landmarks">Landmarks</label>
  <% @landmarks.each do |landmark| %>
    <input 
      type="checkbox" 
      id="landmark_<%= landmark.id %>" 
      name="figure[landmark_ids][]" 
      value="<%= landmark.id %>"
      <%= @figure.landmarks.include?(landmark) ? "checked" : "" %>
    >
    <%= landmark.name %>
  <% end %>

  <label for="new_landmark">Landmark Name: </label>
  <input type="text" id="new_landmark" name="landmark[name]">

  <input type="submit" value="Edit Figure">
</form>